{
    "compilerOptions": {
        "module": "esnext",
        "target": "es2017",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noEmitHelpers": true,
        "noEmitOnError": true,
        "skipLibCheck": true,
        "lib": [
            "es2017",
            "dom"
        ],
        "baseUrl": ".",
        "paths": {
            "~/*": [
                "src/*"
            ]
        }
    },
    "include": [
      "src/tests/**/*.ts",
      "src/**/*.ios.ts",
      "src/**/*.android.ts"
    ],
    "files": [
      "./src/main.ts"
    ],
    "exclude": [
        "node_modules",
        "platforms",
        "e2e"
    ]
}