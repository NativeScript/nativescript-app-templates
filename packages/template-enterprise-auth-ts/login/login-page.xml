<Page class="page"
    navigatingTo="onNavigatingTo" 
    xmlns="http://schemas.nativescript.org/tns.xsd">

    <GridLayout rows="*, auto">
        <StackLayout verticalAlignment="middle">
            <Label class="text-muted t-30" text="Enterprise Auth" horizontalAlignment="center"></Label>
            <Image class="m-t-20" src="res://lock" stretch="none" horizontalAlignment="center"></Image>
        </StackLayout>

        <Button row="1" class="btn btn-primary btn-active btn-margin font-weight-bold t-18" tap="{{ login }}" text="Log in"></Button>
    </GridLayout>

</Page>
