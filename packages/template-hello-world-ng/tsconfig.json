{
  "compilerOptions": {
      "module": "ESNext",
      "target": "es2015",
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "noEmitHelpers": true,
      "noEmitOnError": true,
      "skipLibCheck": true,
      "lib": [
        "es2018", "es2017", "dom", "es6"
      ],
      "baseUrl": ".",
      "paths": {
          "~/*": [
              "app/*"
          ]
      }
  },
  "include": [
    "references.d.ts",
    "src/tests/**/*.ts"
  ],
  "files": [
    "./src/main.ts"
  ],
  "exclude": [
      "node_modules",
      "platforms",
      "e2e"
  ]
}